<project name="bigapk">

  <property name="src" location="src"/>
  <property name="build" location="build/"/>

  <target name="init">
      <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init">
    <javac srcdir="${src}" destdir="${build}">
      <classpath>
          <pathelement path="lib/soot.jar"/>
          <pathelement path="lib/"/>
    </classpath>
    </javac>
  </target>

</project>
